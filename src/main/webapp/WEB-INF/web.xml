<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>newRealCustomerServlet</servlet-name>
        <servlet-class>controller.NewRealCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newRealCustomerServlet</servlet-name>
        <url-pattern>/newRealCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newLegalCustomerServlet</servlet-name>
        <servlet-class>controller.NewLegalCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newLegalCustomerServlet</servlet-name>
        <url-pattern>/newLegalCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>findCustomersServlet</servlet-name>
        <servlet-class>controller.FindCustomersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findCustomersServlet</servlet-name>
        <url-pattern>/find</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeCustomerServlet</servlet-name>
        <servlet-class>controller.RemoveCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeCustomerServlet</servlet-name>
        <url-pattern>/removeCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showCustomerServlet</servlet-name>
        <servlet-class>controller.ShowCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showCustomerServlet</servlet-name>
        <url-pattern>/showCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateCustomerServlet</servlet-name>
        <servlet-class>controller.UpdateCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateCustomerServlet</servlet-name>
        <url-pattern>/updateCustomer</url-pattern>
    </servlet-mapping>
</web-app>