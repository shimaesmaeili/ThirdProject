<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>filters.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>newNaturalServlet</servlet-name>
        <servlet-class>controller.newNaturalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newNaturalServlet</servlet-name>
        <url-pattern>/newNatural</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newLegalServlet</servlet-name>
        <servlet-class>controller.newLegalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newLegalServlet</servlet-name>
        <url-pattern>/newLegal</url-pattern>
    </servlet-mapping>
</web-app>